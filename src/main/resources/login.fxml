<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: #0f1216;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cinemates.controller.LoginController">

    <Label text="CINEMATES" textFill="#e50914">
        <font><Font name="Impact" size="48.0" /></font>
    </Label>

    <Label text="Tham gia mạng lưới xem phim P2P" textFill="#aaaaaa" />

    <VBox maxWidth="300.0" spacing="15.0" style="-fx-background-color: #1a1a2e; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.5), 10, 0, 0, 5);">

        <Label text="Tên hiển thị (Username):" textFill="WHITE" />
        <TextField fx:id="usernameField" promptText="Nhập tên của bạn..." style="-fx-background-color: #333; -fx-text-fill: white; -fx-padding: 10;" />



        <Button fx:id="loginBtn" maxWidth="Infinity" style="-fx-background-color: #d45b12; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10; -fx-cursor: hand;" text="VÀO HỆ THỐNG" />

        <Label fx:id="errorLabel" textFill="RED" />
    </VBox>
</VBox>